<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tenthbit.zoomimageview"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity android:name="com.tenthbit.zoomimageview.sample.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.tenthbit.zoomimageview.sample.OneImageSampleActivity" />
        <activity android:name="com.tenthbit.zoomimageview.sample.ViewPagerSampleActivity" />
    </application>

</manifest>